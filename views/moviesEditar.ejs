<body>
    <h1>Editar pelicula</h1>
    <form action="/movies/edit/<%= pelicula.id %>?_method=PUT" method="POST">
        <label for="title">Titulo</label>
        <input type="text" name="title" id="" value="<%=pelicula.title %>"><br>
        <label for="rating">Rating</label>
        <input type="text" name="rating" id="" value="<%=pelicula.rating %>"><br>
        <label for="">Premios</label>
        <input type="text" name="awards" id="" value="<%=pelicula.awards %>"><br>
        <label for="">Fecha de estreno</label>
        <input type="date" name="release_date" id="" value="<%=pelicula.release_date %>"><br>
        <label for="">Duracion</label>
        <input type="text" name="length" id="" value="<%=pelicula.length %>"><br>
        <button type="submit">Editar</button>
    </form>
</body>